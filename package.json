{
  "name": "quiescent",
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run clean && tsc --build packages/components packages/server packages/cli",
    "test-post": "npm run qs --workspace=quiescent-example-nextjs post -- --title 'Hello World!'",
    "test-build": "npm run qs --workspace=quiescent-example-nextjs build",
    "clean": "rm -rf ./packages/**/dist/ ./packages/**/tsconfig.tsbuildinfo"
  },
  "workspaces": [
    "e2e-testing",
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.38",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "prettier": {
    "proseWrap": "always"
  }
}
