{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "examples/**/dist",
    "examples/nextjs", // nextjs has it's own build tools
    "packages/**/dist",
    "packages/components", // issues with jst rn.
    "e2e-testing",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "examples/express"
    },
    {
      "path": "packages/cli"
    },
//    {
//      "path": "packages/components"
//    },
    {
      "path": "packages/server"
    }
  ]
}
